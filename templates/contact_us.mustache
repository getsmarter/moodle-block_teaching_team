<div class="row">
    <h1 class="col-12">{{title}}</h1>
    <div class="col-12">
        <form method="POST" enctype="multipart/form-data" id="student_contact_us_form">
            <div class="form-group">
                <label for="context" id="reasonlabel">{{reasonlabel}}</label>
                <select
                    name="formreason"
                    id="formreason"
                    class="form-control"
                    aria-labelledby="reasonlabel"
                    required
                >
                    <option value="" disabled="disabled" selected="selected">{{# str }}  select_one_reason, block_teaching_team {{/ str }}</option>
                    {{#reasons}}
                        <option value="{{id}}">{{formreason}}</option>
                    {{/reasons}}
                </select>
            </div>
            <div class="form-group">
                <label for="context" id="contextlabel">{{contextlabel}}</label>
                <textarea
                    name="context"
                    id="context"
                    cols="30"
                    rows="10"
                    class="form-control"
                    aria-labelledby="contextlabel"
                    required
                ></textarea>
            </div>
            <div class="form-group">
                <input
                    type="file"
                    name="attachment"
                    id="attachment"
                    aria-label="Upload an attachment"
                >
            </div>
            <div>
                <a href="{{cancelurl}}" class="btn btn-primary float-right ml-3">Cancel</a>
                <button type="submit" class="btn btn-primary float-right btn-sm ml-0 mb-0 contact-us-submit">
                    Submit
                    <i class="icon fa fa-circle-o-notch fa-spin fa-fw " aria-hidden="true" ></i>
                </button>
            </div>
        </form>
    </div>
    {{#js}}
        $('#student_contact_us_form').on('submit', function(e) {
            $('.contact-us-submit').prop("disabled", true );
            $('.contact-us-submit').css("cursor", "not-allowed");
            $('.contact-us-submit .fa-spin').css("display", "inline-block");
        });
    {{/js}}
</div>
